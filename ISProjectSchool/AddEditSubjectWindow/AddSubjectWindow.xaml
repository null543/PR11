<Window x:Class="ISProjectSchool.AddEditSubjectWindow.AddSubjectWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Добавить студента"
    Height="300"
    Width="450"
    ResizeMode="NoResize"  WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>

            <Label Content="Название предмета:"/>
            <TextBox Margin="0,0,0,15" x:Name="txtGroupName"/>



            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Добавить" Width="100" Margin="0,0,10,0" Click="Button_Click" />
                <Button Content="Отмена" Width="100"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>